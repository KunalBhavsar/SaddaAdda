<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/tools"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@color/light_gray"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_login_btn">

        <fragment android:id="@+id/cart_fragment"
                  android:name="com.emiadda.ui.CartFrgament"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  tools:layout="@layout/toolbar_layout"/>
    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/rlt_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackglass"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/blue_login_btn" />

            <com.daimajia.slider.library.SliderLayout
                android:id="@+id/slider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250dp"
                custom:auto_cycle="false"
                custom:indicator_visibility="visible"
                custom:pager_animation="Accordion"
                custom:pager_animation_span="0" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_login_btn"
                android:padding="@dimen/_10dp">

                 <com.emiadda.utils.CustomFontTextView
                    android:id="@+id/txt_brand_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/txt_amount"
                    android:layout_toStartOf="@+id/txt_amount"
                    android:maxLines="2"
                    android:padding="@dimen/_5dp"
                    android:text="Brand Name"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                 <com.emiadda.utils.CustomFontTextView
                    android:id="@+id/txt_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:maxLines="1"
                    android:padding="@dimen/_5dp"
                    android:text="Rs. 450"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/_5dp">

                 <com.emiadda.utils.CustomFontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:gravity="center_vertical"
                    android:padding="@dimen/_5dp"
                    android:text="Quantity"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangular_border"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_incr_quantity"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="+"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="@color/gray_dark" />

                     <com.emiadda.utils.CustomFontTextView
                        android:id="@+id/txt_quantity"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="1"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="3px"
                        android:layout_height="match_parent"
                        android:background="@color/gray_dark" />

                    <Button
                        android:id="@+id/btn_decr_quantity"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:gravity="center"
                        android:padding="@dimen/_5dp"
                        android:text="-"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:orientation="horizontal"
                android:padding="@dimen/_5dp">

                <Button
                    android:id="@+id/btn_buy_now"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_orange"
                    android:maxLines="1"
                    android:padding="@dimen/_5dp"
                    android:text="BUY NOW"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginLeft="@dimen/_10dp"
                    android:layout_marginRight="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_weight="1"
                    android:background="@drawable/ripple_orange"
                    android:maxLines="1"
                    android:padding="@dimen/_5dp"
                    android:text="ADD TO CART"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

             <com.emiadda.utils.CustomFontTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@color/blue_login_btn"
                android:paddingBottom="@dimen/_10dp"
                android:paddingEnd="@dimen/_15dp"
                android:paddingLeft="@dimen/_15dp"
                android:paddingRight="@dimen/_15dp"
                android:paddingStart="@dimen/_15dp"
                android:paddingTop="@dimen/_10dp"
                android:text="Product Detail"
                android:textColor="@color/white"
                android:textSize="18sp" />

             <com.emiadda.utils.CustomFontTextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="fill_horizontal"
                android:paddingEnd="@dimen/_15dp"
                android:paddingLeft="@dimen/_15dp"
                android:paddingRight="@dimen/_15dp"
                android:paddingStart="@dimen/_15dp"
                android:paddingTop="@dimen/_10dp"
                android:text="sdfb fjweif iwef oweofefuweofhg iwef o8ewhfl ,oiwefbn ekf89efj kwbfuihwe fweoufg8ioe fmn hjewvf ef hwebfoubwe fhwevfui"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/_15dp"
                android:paddingLeft="@dimen/_15dp"
                android:paddingRight="@dimen/_15dp"
                android:paddingStart="@dimen/_15dp"
                android:paddingTop="@dimen/_10dp">

                 <com.emiadda.utils.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Manufacturer"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                 <com.emiadda.utils.CustomFontTextView
                    android:id="@+id/txt_manufacturer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Manufacturer"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/_15dp"
                android:paddingLeft="@dimen/_15dp"
                android:paddingRight="@dimen/_15dp"
                android:paddingStart="@dimen/_15dp"
                android:paddingTop="@dimen/_10dp">

                 <com.emiadda.utils.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Stock status"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                 <com.emiadda.utils.CustomFontTextView
                    android:id="@+id/txt_stock_status"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Stock status"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_10dp"
                android:paddingEnd="@dimen/_15dp"
                android:paddingLeft="@dimen/_15dp"
                android:paddingRight="@dimen/_15dp"
                android:paddingStart="@dimen/_15dp"
                android:paddingTop="@dimen/_10dp">

                 <com.emiadda.utils.CustomFontTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Quantity available"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                 <com.emiadda.utils.CustomFontTextView
                    android:id="@+id/txt_quantity_available"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="20"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/blue_login_btn" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
