<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="35"
                    android:background="@android:color/white">

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">


            <TextView android:id="@+id/txt_emi"
                      android:layout_width="wrap_content"

                      android:layout_height="wrap_content"
                      android:text="EMI"
                      android:textColor="@color/red_login"
                      android:textSize="50sp"
                      android:textStyle="bold|italic"
            />

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"

                      android:layout_toRightOf="@id/txt_emi"
                      android:text="ADDA"
                      android:textColor="@color/blue_login_btn"
                      android:textSize="50sp"
                      android:textStyle="bold|italic"
            />
        </RelativeLayout>

    </RelativeLayout>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="55"
                    android:background="@color/red_login">

        <RelativeLayout android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true">

            <EditText android:id="@+id/edt_email"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_marginLeft="@dimen/_40dp"
                      android:layout_marginRight="@dimen/_40dp"
                      android:background="@drawable/cir_fin"
                      android:drawableLeft="@drawable/user"
                      android:drawablePadding="15dp"
                      android:hint="Email"
                      android:inputType="textEmailAddress"
                      android:paddingLeft="10dp"
                      android:singleLine="true"
                      android:textSize="15sp"/>

            <EditText android:id="@+id/edt_password"
                      android:layout_width="match_parent"
                      android:layout_height="50dp"
                      android:layout_below="@+id/edt_email"
                      android:layout_marginLeft="@dimen/_40dp"
                      android:layout_marginRight="@dimen/_40dp"
                      android:layout_marginTop="20dp"
                      android:background="@drawable/cir_fin"
                      android:drawableLeft="@drawable/password"
                      android:drawablePadding="15dp"
                      android:hint="Password"
                      android:inputType="textPassword"
                      android:paddingLeft="10dp"
                      android:textSize="15sp"/>

            <Button android:id="@+id/btn_submit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/edt_password"
                    android:layout_marginLeft="@dimen/_40dp"
                    android:layout_marginRight="@dimen/_40dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/cir_blue"
                    android:text="START"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"/>
        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>