<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardElevation="5dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rlt_prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_product_bg">

        <ImageView
            android:id="@+id/image_fav"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/_5dp"
            android:layout_marginTop="@dimen/_5dp"
            android:src="@drawable/ic_menu_gallery" />


        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/shirt" />


        <TextView
            android:id="@+id/txt_new"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_10dp"
            android:background="#aaaaaa"
            android:gravity="center"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp"
            android:text="New"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/txt_brand"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/image"
            android:layout_toLeftOf="@+id/txt_price"
            android:background="@color/blue_login_btn"
            android:gravity="left|center_vertical"
            android:paddingLeft="@dimen/_10dp"
            android:text="brand name"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/image"
            android:background="@color/blue_login_btn"
            android:gravity="center"
            android:paddingRight="@dimen/_10dp"
            android:text="Rs. 5120"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>