<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.emiadda.ui.ProductListActivity">

    <include layout="@layout/app_bar_main"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/gray_product_bg"
                  android:orientation="vertical"
                  android:paddingTop="@dimen/_10dp">

        <View android:layout_width="match_parent"
              android:layout_height="3dp"
              android:layout_marginLeft="5dp"
              android:layout_marginRight="5dp"
              android:background="@color/blue_login_btn"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@android:color/white">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="@dimen/_40dp"
                      android:layout_alignParentLeft="true"
                      android:layout_toLeftOf="@+id/txt_sort"
                      android:gravity="center_vertical"
                      android:paddingLeft="@dimen/_5dp"
                      android:text="Men"
                      android:textColor="@color/blue_login_btn"
                      android:textSize="20sp"/>

            <Button android:id="@+id/txt_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:layout_toLeftOf="@+id/txt_filter"
                    android:background="@color/gray_product_bg"
                    android:drawableLeft="@drawable/ic_menu_camera"
                    android:drawablePadding="@dimen/_5dp"
                    android:text="Sort By"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>

            <Button android:id="@+id/txt_filter"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:background="@color/gray_product_bg"
                    android:drawableLeft="@drawable/ic_menu_camera"
                    android:drawablePadding="@dimen/_5dp"
                    android:text="Filter"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@android:color/white"
            android:paddingLeft="@dimen/_5dp"
            android:paddingRight="@dimen/_5dp"/>
    </LinearLayout>

</LinearLayout>
