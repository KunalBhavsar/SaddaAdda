<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                tools:context="com.emiadda.ui.ProductListActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_login_btn"
        app:theme="@style/ThemeOverlay.AppCompat.Light">

        <fragment
            android:id="@+id/cart_fragment"
            android:name="com.emiadda.ui.CartFrgament"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/toolbar_layout"/>
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_awesome_toolbar"
        android:fitsSystemWindows="true">

        <RelativeLayout
            android:id="@+id/rel_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@color/white"
            android:padding="@dimen/_5dp">

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/btn_search"
                android:layout_toStartOf="@+id/btn_search"
                android:background="@color/light_gray"
                android:gravity="center_vertical"
                android:hint="@string/search_hint"
                android:lines="1"
                android:paddingEnd="@dimen/_5dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:paddingStart="@dimen/_5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_dark"
                android:textSize="14sp"/>

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="@dimen/_40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/blue_login_btn"
                android:src="@drawable/ic_search"/>
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_layout"
        android:background="@color/gray_product_bg"
        android:orientation="vertical"
        android:padding="@dimen/_5dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/blue_login_btn"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:padding="@dimen/_5dp">

            <com.emiadda.utils.CustomFontTextView
                android:id="@+id/txt_category_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/lnr_sort"
                android:gravity="center_vertical"
                android:minHeight="@dimen/_40dp"
                android:paddingLeft="@dimen/_5dp"
                android:text="Men"
                android:textColor="@color/blue_login_btn"
                android:textSize="18sp"/>

            <LinearLayout
                android:id="@+id/lnr_sort"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/lnr_filter"
                android:background="@color/gray_product_bg"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:background="@color/blue_login_btn"
                    android:padding="@dimen/_5dp"
                    android:src="@drawable/sort"/>

                <Button
                    android:id="@+id/txt_sort"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_30dp"
                    android:background="@color/light_gray"
                    android:clickable="false"
                    android:text="Sort By"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnr_filter"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="@dimen/_5dp"
                android:background="@color/gray_product_bg"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    android:background="@color/blue_login_btn"
                    android:padding="@dimen/_5dp"
                    android:src="@drawable/filter"/>

                <Button
                    android:id="@+id/txt_filter"
                    android:layout_width="@dimen/_60dp"
                    android:layout_height="@dimen/_30dp"
                    android:layout_centerVertical="true"
                    android:background="@color/light_gray"
                    android:text="Filter"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <com.emiadda.utils.CustomFontTextView
                android:id="@+id/txt_no_products"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120dp"
                android:layout_below="@+id/temp_top_view"
                android:gravity="center"
                android:text="@string/no_result"
                android:textSize="16sp"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:padding="@dimen/_5dp"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlt_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/app_bar_layout"
        android:background="@color/blackglass"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </RelativeLayout>
</RelativeLayout>
