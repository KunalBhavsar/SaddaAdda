<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_product_bg"
    android:orientation="vertical"
    tools:context="com.emiadda.ui.SubCategoryActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_awesome_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/txt_title"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/logo" />

            <ImageView
                android:id="@+id/img_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/cart" />
        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80dp"
            android:padding="@dimen/_5dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner"
            app:layout_scrollFlags="scroll|enterAlways" />
    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lin_bottom_banner"
        android:layout_below="@+id/app_bar_layout"
        android:layout_margin="@dimen/_5dp"
        android:background="@color/white"
        android:padding="5dp" />

    <LinearLayout
        android:id="@+id/lin_bottom_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_5dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:scaleType="fitXY"
                android:src="@drawable/banner1" />

            <View
                android:layout_width="@dimen/_5dp"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:scaleType="fitXY"
                android:src="@drawable/banner2" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
