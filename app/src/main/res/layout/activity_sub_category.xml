<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_product_bg"
    android:orientation="vertical"
    tools:context="com.emiadda.ui.SubCategoryActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_login_btn"
        app:theme="@style/ThemeOverlay.AppCompat.Light">

        <fragment android:id="@+id/cart_fragment"
                  android:name="com.emiadda.ui.CartFrgament"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  tools:layout="@layout/toolbar_layout"/>
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/my_awesome_toolbar"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_scrollFlags="scroll|enterAlways">

        <RelativeLayout
            android:id="@+id/rel_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:visibility="visible"
            android:background="@color/white"
            android:padding="@dimen/_5dp">

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/btn_search"
                android:layout_toStartOf="@+id/btn_search"
                android:background="@color/light_gray"
                android:gravity="center_vertical"
                android:hint="@string/search_hint"
                android:lines="1"
                android:textSize="14sp"
                android:paddingEnd="@dimen/_5dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:paddingStart="@dimen/_5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_dark" />

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="@dimen/_40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/blue_login_btn"
                android:src="@drawable/ic_search" />
        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5dp"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/blue_login_btn" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120dp"

                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner" />

                 <com.emiadda.utils.CustomFontTextView
                    android:id="@+id/txt_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="#80000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/_10dp"
                    android:text="Category"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                 <com.emiadda.utils.CustomFontTextView
                    android:id="@+id/txt_no_sub_categories"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120dp"
                    android:gravity="center"
                    android:text="@string/no_result"
                    android:background="@color/white"
                    android:visibility="visible"
                    android:textSize="16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:visibility="gone"
                    android:padding="5dp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_bottom_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_5dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner1" />

                    <View
                        android:layout_width="@dimen/_5dp"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner2" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:id="@+id/rlt_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blackglass"
        android:layout_below="@+id/app_bar_layout"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </RelativeLayout>

</RelativeLayout>
