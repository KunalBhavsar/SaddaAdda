<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_product_bg"
    android:orientation="vertical"
    tools:context="com.emiadda.ui.SubCategoryActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_scrollFlags="scroll|enterAlways">

        <android.support.v7.widget.Toolbar
            android:id="@+id/my_awesome_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Light">

            <ImageView
                android:id="@+id/txt_title"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/logo"/>

            <ImageView
                android:id="@+id/img_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="10dp"
                android:src="@drawable/cart"/>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/rel_search"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:background="@color/white"
            android:padding="@dimen/_5dp">

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/btn_search"
                android:layout_toStartOf="@+id/btn_search"
                android:background="@color/light_gray"
                android:gravity="center_vertical"
                android:hint="@string/search_hint"
                android:lines="1"
                android:paddingEnd="@dimen/_5dp"
                android:paddingLeft="@dimen/_5dp"
                android:paddingRight="@dimen/_5dp"
                android:paddingStart="@dimen/_5dp"
                android:textColor="@color/black"
                android:textColorHint="@color/gray_dark"/>

            <ImageButton
                android:id="@+id/btn_search"
                android:layout_width="@dimen/_40dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:background="@color/blue_login_btn"
                android:src="@drawable/ic_search"/>
        </RelativeLayout>

        <View android:layout_width="match_parent"
              android:layout_height="3dp"
              android:layout_marginLeft="@dimen/_5dp"
              android:layout_marginRight="@dimen/_5dp"
              android:background="@color/blue_login_btn"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140dp"
                    android:layout_marginLeft="@dimen/_5dp"
                    android:layout_marginRight="@dimen/_5dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner2"
                />

                <TextView android:id="@+id/txt_category"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_alignParentBottom="true"
                          android:layout_marginLeft="@dimen/_5dp"
                          android:layout_marginRight="@dimen/_5dp"
                          android:background="#80000000"
                          android:gravity="center_vertical"
                          android:paddingLeft="@dimen/_10dp"
                          android:text="Category"
                          android:textColor="@color/white"
                          android:textSize="16sp"/>
            </RelativeLayout>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                <TextView android:layout_width="match_parent"
                          android:layout_height="@dimen/_40dp"
                          android:background="@android:color/white"
                          android:gravity="center_vertical"
                          android:paddingLeft="@dimen/_10dp"
                          android:text="Products not available"
                          android:textSize="18sp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:padding="5dp"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lin_bottom_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingRight="@dimen/_5dp"
                android:paddingBottom="@dimen/_5dp"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/banner"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner1"/>

                    <View
                        android:layout_width="@dimen/_5dp"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="50"
                        android:scaleType="fitXY"
                        android:src="@drawable/banner2"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
