<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rel_cart"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/txt_title"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginLeft="-30dp"
        android:src="@drawable/logo"
        android:transitionName="login"
        android:visibility="gone"/>

    <com.emiadda.utils.CustomTextView
        android:id="@+id/txt_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:font="@string/font_monteserrat_regular"
        android:layout_below="@+id/temp_top_view"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/img_search"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:padding="4dp"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@id/img_cart"
        android:focusable="true"/>


    <ImageView
        android:id="@+id/img_cart"
        android:layout_width="@dimen/_30dp"
        android:layout_height="@dimen/_30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="2dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="20dp"
        android:focusable="true"
        android:src="@drawable/ic_cart1"/>

    <TextView
        android:id="@+id/txt_count"
              android:layout_width="20dp"
              android:layout_height="20dp"
              android:layout_alignParentRight="true"
              android:layout_gravity="end|top"
              android:layout_marginRight="7dp"
              android:layout_marginTop="7dp"
              android:background="@drawable/cart_circle"
              android:gravity="center"
              android:visibility="gone"
              android:textColor="@color/black"
              android:textSize="10sp"/>
</RelativeLayout>